{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "TimeTracker",
	"version": "0.1.0",
	"identifier": "com.timetracker.app",
	"build": {
		"beforeDevCommand": "",
		"beforeBuildCommand": "pnpm build",
		"devUrl": "http://localhost:1420",
		"frontendDist": "./dist"
	},
	"app": {
		"windows": [
			{
				"title": "TimeTracker",
				"width": 1280,
				"height": 720,
				"minWidth": 760,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"alwaysOnTop": false,
				"skipTaskbar": false,
				"transparent": false,
				"center": true,
				"maximized": false,
				"visible": false
			}
		],
		"security": {
			"csp": null,
			"capabilities": [
				"main-capability"
			]
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"category": "Productivity",
		"copyright": "Copyright (c) 2025 Time Tracker Team",
		"shortDescription": "现代化的时间跟踪和管理工具",
		"longDescription": "TimeTracker 是一个功能强大的时间跟踪和管理工具，帮助您提高工作效率，更好地管理时间。支持任务分类、统计报告、数据导入导出等功能。",
		"icon": [
			"icons/32x32.png",
			"icons/64x64.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico",
			"icons/icon.png"
		],
		"resources": [],
		"externalBin": [],
		"createUpdaterArtifacts": false,
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": null,
			"tsp": false,
			"wix": {
				"language": "zh-CN",
				"template": null
			}
		},
		"linux": {
			"deb": {
				"depends": []
			}
		},
		"macOS": {
			"frameworks": [],
			"minimumSystemVersion": "10.11",
			"exceptionDomain": ""
		}
	},
	"plugins": {
		"shell": {
			"open": true
		}
	}
}